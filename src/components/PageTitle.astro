---
interface Props {
    title: string;
    subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="py-8 sm:py-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
            <h1 class="font-serif text-4xl tracking-tight sm:text-6xl">
                {title}
            </h1>
            {subtitle && <p class="mt-6 text-lg leading-8">{subtitle}</p>}
        </div>
    </div>
</div>
